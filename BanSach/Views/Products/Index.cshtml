@model IEnumerable<BanSach.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm mới", "Create")
</p>
<table class="table">
    <tr>
        <th> Tên Sản phẩm </th>
        <th> Mô tả </th>
        <th> Đơn giá </th>
        <th> Hình </th>
        <th> Loại Sản phẩm </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamePro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecriptionPro) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price) VNĐ
        </td>
        <td>
            <img src="~/Content/images/@item.ImagePro " width="80" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category1.NameCate)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
