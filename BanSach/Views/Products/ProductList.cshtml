@*@model IEnumerable<BanSach.Models.Product>*@
<!-- Thêm thư viện & thay đổi mô hình để sử dụng thư viện phân trang -->
@using PagedList.Mvc;
@model PagedList.IPagedList<BanSach.Models.Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/PagedList.css" type="text/css" rel="stylesheet">
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link href="~/CSS/Bán-sách-BST.css" type="text/css" rel="stylesheet">
<!--=intro slide section (carousel)-->

    <section id="slide intro">
        <div class="container-lg">
            <div class="border border-dark border-opacity-25 mt-3 mb-3"></div>
            <div class="row justify-content-center justify-content-around">
                <div id="carouselExampleIndicators1" class="carousel carousel-dark
            slide col-4 col-md-3" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators1"
                                data-bs-slide-to="0" class="active" aria-current="true"
                                aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators1"
                                data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators1"
                                data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title text-nowrap text-primary mb-2 text-center text-black">
                            Đề xuất
                        </h4>
                    </div>
                    <div class="carousel-inner ">
                        <div class="carousel-item active">
                            <img src="~/Content/images/englishBook-3.jpg" class="d-block w-100
                  img-fluid
                  card-img-top" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/politicBook-1.jpg" class="d-block w-100 img-fluid
                  card-img-top" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/schoolBook-4.jpg" class="d-block w-100 img-fluid
                  card-img-top" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#carouselExampleIndicators1" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                            data-bs-target="#carouselExampleIndicators1" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div id="carouselExampleIndicators2" class="carousel carousel-dark
            slide col-4 col-md-3" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators2"
                                data-bs-slide-to="0" class="active" aria-current="true"
                                aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators2"
                                data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators2"
                                data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title text-nowrap text-primary mb-2 text-center  text-black">
                            Phổ biến
                        </h4>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/images/novelBook-2.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/historyBook-4.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/childBook-4.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#carouselExampleIndicators2" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                            data-bs-target="#carouselExampleIndicators2" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div id="carouselExampleIndicators3" class="carousel carousel-dark
            slide col-4 col-md-3" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators3"
                                data-bs-slide-to="0" class="active" aria-current="true"
                                aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators3"
                                data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators3"
                                data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>

                    <div class="card-body">
                        <h4 class="card-title text-nowrap text-primary mb-2 text-center  text-black">
                            Ưu đãi
                        </h4>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/images/englishBook-2.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/schoolBook-2.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/novelBook-2.jpg" class="d-block w-100 img-fluid"
                                 alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button"
                            data-bs-target="#carouselExampleIndicators3" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button"
                            data-bs-target="#carouselExampleIndicators3" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="border border-dark border-opacity-25 mt-4"></div>
        </div>
    </section>
    <div style="padding: 15px; ">
        @using (Html.BeginForm("ProductList", "Products", FormMethod.Get))
        {
            <table class="row text-center">
                <td>
                    Đơn giá từ : <input type="number" name="min" class="border-dark rounded-pill"/>
                    Đến : <input type="number" name="max" class="border-dark rounded-pill"/>
                   <input type="submit" value="Tìm giá" class="btn btn-info rounded-pill" />
                </td>
            </table>
        }
    </div>
    <!--content section-->
    <div class="container mb-5">
        <div class="row">
            @foreach (var pro in Model)
            {
                <div class="col-3 col-md-3 col-lg-3">
                    <div class="card card-height">
                        <img src="~/Content/images/@pro.ImagePro" class="card-img-top img-fluid
                    img-content" alt="..." width="100">
                        <div class="card-body ">
                            <h5 class="card-title d-none d-md-block name-size">
                                <p>@Html.DisplayFor(model => pro.NamePro)</p>
                            </h5>
                            <p class="card-text d-none d-lg-block text-muted info-size">
                            <p>Đơn giá : <font color="red">@Html.DisplayFor(model => pro.Price) VNĐ</font> </p>
                            <a class="btn btn-info" href="/Products/Details/@pro.ProductID"> Chi tiết </a>
                            <a href="/ShoppingCart/AddToCart/@pro.ProductID" class="btn btn-primary">Mua</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Thêm đoạn mã để hiển thị số trang và số trang hiện tại -->
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <!--Control PagedListPager: mô tả mô hình với số trang là liên kết với tham số "Index" và tham số page-->
    @Html.PagedListPager(Model, page => Url.Action("ProductList", new { page }))
    <!-- Kết thúc -->
