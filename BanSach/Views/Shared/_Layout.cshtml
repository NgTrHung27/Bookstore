          rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
          crossorigin="anonymous">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/CSS/Bán-sách-BST.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/mycss.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.google.com/specimen/Roboto">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>

    <!--navbar-->
    <nav class="navbar navbar-expand-md bg-info">
        <div class="container">
            <div class="row justify-content-md-center justify-content-md-start">
                <div class="col-7 col-sm-7 col-md-6 col-lg-2 mb-1
            align-self-md-center">
                    <a class="navbar-brand"
                       href="@Url.Action("ProductList", "Products")">
                        <img class="img-fluid" src="~/Content/images/logo-sách2.png"
                             alt="logo web">
                    </a>
                </div>
                <!-- Force next columns to break to new line at md breakpoint and up -->
                <div class="w-100 d-none d-md-block d-lg-none"></div>

                <div class="col-md-5 col-lg-3 align-self-md-center">
                    <form class="d-flex d-xl-flex mb-1 mt-2">
                        <input class="form-control me-1 rounded-pill" type="search" placeholder="Tên sách..." aria-label="Search" name="SearchString">
                        <button class="btn rounded-pill btn-success" type="submit">
                            <span class="bi-search"></span>
                        </button>
                    </form>
                </div>
                <div class="col-md-7 col-lg-7 align-self-md-center">
                    <!--Toggle button for mobile devices-->
                    <button class="navbar-toggler" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle
              navigation">
                        <span class="bi-list-ul"></span>
                    </button>

                    <!--navbar links-->
                    <div class="collapse navbar-collapse"
                         id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-lg-0 fw-semibold">
                            <li class="nav-item">
                                <a class="nav-link active bi-house-fill
                    me-2" aria-current="page" href="@Url.Action("ProductList", "Products")">
                                    Trang
                                    chủ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2 bi-info-circle-fill"
                                   href="@Url.Action("Infomation", "Products")">Thông tin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2 bi-telephone-fill"
                                   href="#">Liên hệ</a>
                            </li>
                            <li class="nav-item dropdown account">
                                <a class="nav-link dropdown-toggle me-2
                    bi-person-circle" href="#"
                                   id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Tài khoản
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/LoginUser/Index">
                                            Đăng
                                            nhập
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/LoginUser/RegisterUser">
                                            Phân quyền
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("LogOutUser", "LoginUser")">
                                            Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link me-2 bi-cart4" href="/ShoppingCart/ShowCart">
                                    Giỏ hàng
                                </a>
                            </li>
                            <li style="padding-top:8px;">
                                @if (Session["NameUser"] == null)
                                {
                                    <span>Chào mừng</span>
                                }
                                else
                                {
                                    <span class="bi-person-circle"> @Session["NameUser"]</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    @{Html.RenderAction("CategoryPartial", "Categories");}
    <div class="container ">
        @RenderBody()
    </div>
